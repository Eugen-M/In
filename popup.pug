extends layout/main

block title
    | Title
    
block styles
    link(href="styles/page-company.css" rel="stylesheet")
    link(href="styles/blocks/check-item.css" rel="stylesheet")
    link(href="styles/blocks/popup-block.css" rel="stylesheet")

block scripts
    script(src="js/popup-inputs.js")
    
block content
    div(style="background: lightgray;")
        br
        
        // sign in
        .popup-block
            .popup-block__title Sign in 
            
            .popup-block__content
                .popup-block__text New here? 
                    a.popup-block__text-link(href="") Create an account.
                        
                form.popup-block__form(method='POST' action='')
                    .popup-block__row
                        .popup-block__row-wrap
                            input.popup-block__input(type="text" data-placeholder="Email")
                            label.popup-block__label Email
                    
                    .popup-block__row.popup-block__row_error
                        .popup-block__row-wrap
                            input.popup-block__input(type="password" data-placeholder="Password")
                            label.popup-block__label Password
                        .popup-block__msg.popup-block__msg_error Password is required./Password is incorrect.
                    
                        .popup-block__forgot
                            a.popup-block__forgot-link(href="") Forgot your password?
                    
                    .check-item
                        label.check-item__label
                            input.check-item__input(type="checkbox" id="ch")
                            span.check-item__dot
                            span.check-item__name Remember this device 
                                
                    button.popup-block__btn.popup-block__btn_submit(type="submit") Sign in 
                    
                .popup-block__sep
                    span.popup-block__sep-text or sign in with 
                    
                .popup-block__buttons
                    button.popup-block__btn.popup-block__btn_google 
                        span.popup-block__btn-icon Google 
                        
                    button.popup-block__btn.popup-block__btn_in 
                        span.popup-block__btn-icon LinkedIn 
                    
                    button.popup-block__btn.popup-block__btn_fb 
                        span.popup-block__btn-icon Facebook
                        
                    button.popup-block__btn.popup-block__btn_tw 
                        span.popup-block__btn-icon Twitter
                        
            .popup-block__btn.popup-block__btn_close
            
        br
